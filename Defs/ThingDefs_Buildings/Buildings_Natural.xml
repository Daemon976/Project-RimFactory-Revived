<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--============================ Resource rocks ===============================-->

  <ThingDef ParentName="RockBase">
    <defName>WDMineableCoal</defName>
    <label>coal</label>
    <description>Coal is a combustible black or brownish-black sedimentary rock, formed as rock strata called coal seams.</description>
    <graphicData>
      <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <color>(30,30,30)</color>
      <colorTwo>(88,88,88)</colorTwo>
    </graphicData>
    <statBases>
      <MaxHitPoints>1000</MaxHitPoints>
    </statBases>
    <building>
      <isResourceRock>true</isResourceRock>
      <mineableThing>WDCoal</mineableThing>
      <mineableYield>40</mineableYield>
      <mineableScatterCommonality>0.3</mineableScatterCommonality>
      <mineableScatterLumpSizeRange>20~40</mineableScatterLumpSizeRange>
    </building>
  </ThingDef>


</Defs>
