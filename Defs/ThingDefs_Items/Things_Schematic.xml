<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!--==================================== data disk ==============================-->
  <ThingDef>
    <defName>RimFactory_Data_Disk</defName>
    <label>recipe data disk</label>
    <thingClass>ThingWithComps</thingClass>
    <description>A roll of magnetic tape. Apparently it can hold 64 megabytes. How primitive... Its used to create Recipe DataBases(project rimfactory)</description>
    <graphicData>
      <texPath>SAL3/datadisk</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <onGroundRandomRotateAngle>120</onGroundRandomRotateAngle>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <stackLimit>1</stackLimit>
    <useHitPoints>true</useHitPoints>
    <statBases>
      <MarketValue>500</MarketValue>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>2</Mass>
    </statBases>
    <thingCategories>
      <li>Items</li>
    </thingCategories>
    <drawGUIOverlay>false</drawGUIOverlay>
    <colorGenerator Class="ProjectRimFactory.SAL3.Tools.ColorGenerator_RangeHSV">
      <rangeH>0~1</rangeH>
      <rangeS>1</rangeS>
      <rangeV>1</rangeV>
    </colorGenerator>
    <selectable>true</selectable>
    <!-- Inherited from ResourceBase -->
    <category>Item</category>
    <altitudeLayer>Item</altitudeLayer>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
      <li>
        <compClass>CompColorable</compClass>
      </li>
    </comps>
    <alwaysHaulable>true</alwaysHaulable>
    <rotatable>false</rotatable>
    <pathCost>15</pathCost>
  </ThingDef>

  <!--==================================== Small frame ===============================-->
  <ThingDef ParentName="PRFResourceBase">
    <defName>PRFMachineFrameSmall</defName>
    <label>simple machine frame</label>
    <description>The empty shell of a small automation building.</description>
    <graphicData>
      <texPath>Common/MachineFrameSmall</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <statBases>
      <MarketValue>80</MarketValue>
      <MaxHitPoints>50</MaxHitPoints>
      <WorkToMake>1800</WorkToMake>
      <Mass>10</Mass>
    </statBases>
    <thingCategories>
      <li>Items</li>
    </thingCategories>
    <costList>
      <Steel>30</Steel>
      <Plasteel>5</Plasteel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Cook</effectWorking>
      <soundWorking>Recipe_Machining</soundWorking>
      <recipeUsers>
        <!-- <li>TableRoboticMachining</li> -->
      </recipeUsers>
    </recipeMaker>
    <researchPrerequisites>
      <li>PRFEulersIdentity</li>
    </researchPrerequisites>
    <tradeability>Sellable</tradeability>
    <stackLimit>5</stackLimit>
  </ThingDef>


